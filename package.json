{
	"name": "@lesjoursfr/html-to-epub",
	"version": "4.2.4",
	"description": "A library to generate EPUB from HTML. Inspired by epub-gen.",
	"license": "MIT",
	"repository": "lesjoursfr/html-to-epub",
	"homepage": "https://github.com/lesjoursfr/html-to-epub#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/html-to-epub/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "18.x || 20.x"
	},
	"keywords": [
		"epub",
		"generator",
		"ebook",
		"html"
	],
	"type": "module",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*",
		"templates/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"check-lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
		"format": "prettier --write .",
		"build": "tsc",
		"test": "cross-env NODE_OPTIONS='--loader=ts-node/esm' mocha"
	},
	"dependencies": {
		"archiver": "^7.0.1",
		"axios": "^1.6.8",
		"diacritics": "^1.3.0",
		"ejs": "^3.1.10",
		"entities": "^4.5.0",
		"fs-extra": "^11.2.0",
		"image-size": "^1.1.1",
		"mime": "^4.0.3",
		"rehype-parse": "^9.0.0",
		"rehype-stringify": "^10.0.0",
		"unified": "^11.0.4",
		"unist-util-visit": "^5.0.0",
		"uslug": "^1.0.4"
	},
	"devDependencies": {
		"@tsconfig/node18": "^18.2.4",
		"@types/archiver": "^6.0.2",
		"@types/diacritics": "^1.3.3",
		"@types/ejs": "^3.1.5",
		"@types/fs-extra": "^11.0.4",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.12.11",
		"@types/uslug": "^1.0.4",
		"@typescript-eslint/eslint-plugin": "^7.8.0",
		"@typescript-eslint/parser": "^7.8.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"mocha": "^10.4.0",
		"prettier": "^3.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"packageManager": "yarn@4.2.2"
}
